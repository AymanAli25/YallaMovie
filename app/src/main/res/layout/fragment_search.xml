<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="10dp"
android:padding="4dp"
tools:context="com.ayman.yallamovie.SearchFragment">

<android.support.v7.widget.SearchView
    android:id="@+id/search"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    app:layout_constraintEnd_toStartOf="@+id/btn_submit_private"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<android.support.v7.widget.RecyclerView
    android:id="@+id/selectedFilters"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/search"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/search"
    android:layout_below="@+id/search"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/search" />

<Button
    android:id="@+id/btn_submit_private"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_alignBottom="@+id/search"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:text="Done"
    app:layout_constraintBottom_toTopOf="@+id/selectedFilters"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
